<Page x:ConnectionId='1'
    x:Class="LRMS.UWP.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LRMS.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
                          
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="BackgroundPic">
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="64"
                       Text="&#xE13D;"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            <Grid Grid.Column="1" Width="200" Height="80" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBox x:ConnectionId='5' Grid.Row="0"
                         x:Name="UsernameBox"
                         Width="200"
                         VerticalAlignment="Center"
                         PlaceholderText="Enter your username"
                         BorderBrush="{x:Null}"/>
                <PasswordBox x:ConnectionId='6' Grid.Row="1"
                             x:Name="PasswordBox"
                             Width="200"
                             MaxLength="16"
                             VerticalAlignment="Center"
                             PasswordChar="*"
                             PlaceholderText="Enter your password"
                                                                    
                             BorderBrush="{x:Null}"/>
            </Grid>
            <TextBlock Grid.Column="2"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="24"
                       Text="&#xE00F;"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            <Ellipse x:ConnectionId='4' Grid.Column="2"
                     Stroke="Black" 
                     Width="64"
                     Height="64"
                     StrokeThickness="2" 
                     Fill="Transparent" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center"
                                            />
        </Grid>
        <ProgressRing x:ConnectionId='3' Name="LoginProgressRing"
                          IsActive="False"
                          Width="64" Height="64"/>
        <!--<controls:Loading x:Name="LoadingControl"
                          HorizontalContentAlignment="Center"
                          Width="100" Height="100">-->
            <!-- Loading screen content -->
            <!--<controls:Loading.Background>
                <SolidColorBrush Color="Black" Opacity="0.7" />
            </controls:Loading.Background>
            <ContentControl x:Name="LoadingContentControl" />
        </controls:Loading>-->
    </Grid>
</Page>

